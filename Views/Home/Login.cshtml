@model Test1.Models.LoginModel
@{
    Layout = "~/Views/Shared/_UnsignedLayout.cshtml";
}
<section id="team" class="team">
    <div class="container">
        <div class="section-title">
            <h2>Вход в систему</h2>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-3">
                <div class="member">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true) 
                            <div class="form-group">
                                    <p>@Html.LabelFor(model => model.Name, "Логин")</p>
                                    <p>
                                        @Html.EditorFor(model => model.Name)
                                        @Html.ValidationMessageFor(model => model.Name)
                                    </p>
                            </div>
                            <div class="form-group">
                                    <p>@Html.LabelFor(model => model.Password, "Пароль")</p>
                                    <p>
                                        @Html.EditorFor(model => model.Password)
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </p>
                            </div>
                            <div class="form-group">
                                    <input type="submit" value="Войти" class="btn btn-primary btn-sm" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section><!-- End Team Section -->




